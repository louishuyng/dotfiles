[
  {
    "bindings": {
      "ctrl-p": "file_finder::Toggle",
      "ctrl-j": "menu::SelectNext",
      "ctrl-k": "menu::SelectPrevious",
      "cmd-s": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      // General
      "space w": "workspace::Save",
      "space q": "pane::CloseActiveItem",
      // File Explore
      "ctrl-p": "file_finder::Toggle",
      "space /": "workspace::NewSearch",
      // Split
      ", v": "pane::SplitRight",
      ", s": "pane::SplitUp",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      // Buffer
      "alt-,": "pane::ActivatePreviousItem",
      "alt-.": "pane::ActivateNextItem",
      ", b d": "pane::CloseActiveItem",
      ", b d a": "pane::CloseAllItems",
      // Temrinal
      "ctrl-t": "workspace::NewTerminal",
      // LSP
      "g f": "editor::GoToDefinition",
      "g v": "editor::GoToDefinitionSplit",
      // Git
      ", g b": "editor::ToggleGitBlame",
      "space g b": "editor::ToggleGitBlameInline",
      "] h": "editor::GoToHunk",
      "[ h": "editor::GoToPreviousHunk",
      // Collapse sidebar workspace
      "ctrl-\\": "project_panel::ToggleFocus",
      "space v": "outline_panel::ToggleFocus",
      ", g s": "git_panel::ToggleFocus",
      // Code Action
      "space c a": "editor::ToggleCodeActions",
      // Find all word matc hbelow cursor
      "ctrl-n": "editor::SelectAllMatches",
      // Diagnostic
      "] d": "editor::GoToDiagnostic",
      "[ d": "editor::GoToPreviousDiagnostic"
      // TODO:
      // Run Test
      // Run Test in current cursor
      // Run Test in current file
    }
  },
  {
    "context": "Editor && showing_completions",
    "use_key_equivalents": true,
    "bindings": {
      "\\ \\": "editor::ComposeCompletion"
    }
  },
  {
    "context": "Editor && edit_prediction",
    "bindings": {
      "\\ \\": "editor::AcceptEditPrediction"
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "tab": [
        "workspace::SendKeystrokes",
        "down"
      ],
      "shift-tab": [
        "workspace::SendKeystrokes",
        "up"
      ]
    }
  },
  {
    // Folder Sidebar
    "context": "ProjectPanel && not_editing",
    "bindings": {
      // Add new file
      "a": "project_panel::NewFile",
      "A": "project_panel::NewDirectory",
      // Delete file
      "D": "project_panel::Delete",
      // Rename file
      "r": "project_panel::Rename",
      "l": "project_panel::OpenPermanent"
    }
  },
  {
    "context": "Editor && mode == full",
    "use_key_equivalents": true,
    "bindings": {
      "cmd-i": "assistant::InlineAssist",
      "cmd-l": "assistant::NewChat"
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "GitPanel > Editor",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "OutlinePanel > Editor",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      // Close terminal
      "ctrl-t": "pane::CloseActiveItem"
    }
  }
]
