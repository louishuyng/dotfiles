#!/usr/bin/env sh

# stop process new window manager in Ventura
launchctl unload -F /System/Library/LaunchAgents/com.apple.WindowManager.plist

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          on
yabai -m config window_topmost on
yabai -m config window_placement             first_child
yabai -m config window_topmost               off
yabai -m config window_opacity               on
yabai -m config window_opacity_duration      0.3
yabai -m config window_shadow                float
yabai -m config insert_feedback_color        0xaad75f5f
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.90
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config window_gap                   07
yabai -m config window_border                off
yabai -m config window_border_width          1
yabai -m config active_window_border_color  0xff48e566
yabai -m config normal_window_border_color  0xff1A1A1A

STATUSBAR_HEIGHT=$(spacebar -m config height)
yabai -m config external_bar all:$STATUSBAR_HEIGHT:0

# signals
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

yabai -m signal --add event=window_destroyed action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"
yabai -m signal --add event=application_terminated action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"

yabai -m signal --add event=space_changed action="osascript -e 'tell application \"UÌˆbersicht\" to refresh widget id \"simple-bar-index-jsx\"'"

# Rules

# Labels
yabai -m space 1 --label debug
yabai -m space 2 --label code
yabai -m space 3 --label view
yabai -m space 4 --label social

# debug
yabai -m rule --add app="^sqlectron$"      opacity=1 manage=off          space=debug
yabai -m rule --add app="^Postman$" manage=off opacity=1                 space=debug
yabai -m rule --add app="^Beekeeper Studio$" manage=off                  space=debug
yabai -m rule --add app="Mingo$" manage=off          opacity=1           space=debug
yabai -m rule --add app="^Wireshark$" manage=off                         space=debug
yabai -m rule --add app="Visual Studio Code" manage=off opacity=1        space=debug
yabai -m rule --add app="^DevToys$" manage=off opacity=1                 space=debug
yabai -m rule --add app="^Docker$" manage=off                            space=debug
yabai -m rule --add app="^OWASP$" manage=off                             space=debug
yabai -m rule --add app="NordVPN" manage=off          opacity=1          space=debug
yabai -m rule --add app="^Disk Utility$" manage=off          opacity=1   space=debug
yabai -m rule --add app="^GraphiQL$" manage=off          opacity=1       space=debug
yabai -m rule --add app="^Burp Suite Community Edition$" manage=off      opacity=1       space=debug
yabai -m rule --add app="^Flipper$" manage=off      opacity=1       space=debug
yabai -m rule --add app="^Lens$" manage=off      opacity=1       space=debug
yabai -m rule --add label="Sourcetree" app="^Sourcetree$" manage=off space=debug
yabai -m rule --add app="^DataGrip$"      opacity=1 manage=off          space=debug

# Code
yabai -m rule --add app="Alacritty"                            space=code
yabai -m rule --add app="^Xcode$" manage=off                   space=code
yabai -m rule --add app="WezTerm"                              space=code
yabai -m rule --add app="^Safari$" title="^(General|(Tab|Password|Website|Extension)s|AutoFill|Se(arch|curity)|Privacy|Advance)$" manage=off space=code
yabai -m rule --add app="qutebrowser"                          space=code

# Browser
yabai -m rule --add app="^Microsoft Edge$"         opacity=1   space=view
yabai -m rule --add app="Preview" manage=off                   space=view
yabai -m rule --add app="^Microsoft Word$" opacity=1 manage=off space=view
yabai -m rule --add app="^Microsoft Excel$" opacity=1 manage=off space=view
yabai -m rule --add app="^Microsoft PowerPoint$" opacity=1 manage=off space=view
yabai -m rule --add app="StarUML"          opacity=1 manage=off    space=view
yabai -m rule --add app="Notion"           opacity=1 manage=off    space=view
yabai -m rule --add app="Obsidian"         opacity=1 manage=off    space=view
yabai -m rule --add app="^Figma$"            opacity=1 manage=off    space=view

# Social
yabai -m rule --add app="Slack" title="Slack"      opacity=1 manage=off space=social
yabai -m rule --add app="zoom.us" manage=off       opacity=1            space=social
yabai -m rule --add app="^Microsoft Teams$" manage=off       opacity=1  space=social
yabai -m rule --add app="^Discord$" manage=off               opacity=1  space=social
yabai -m rule --add app="^Spotify$"          opacity=1 manage=off space=social
yabai -m rule --add app="^Skype$"          opacity=1 manage=off space=social
yabai -m rule --add app="^Mailspring$"          opacity=1 manage=off space=social

# Others
yabai -m rule --add app="QuickTime Player" manage=off
yabai -m rule --add app="VLC"              manage=off
yabai -m rule --add label="Finder" app="^Finder$" title="(Co(py|nnect)|Move|Info|Pref)" manage=off
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add label="Alfred Preferences" app="^Alfred Preferences$" manage=off
yabai -m rule --add label="App Store" app="^App Store$" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off
yabai -m rule --add label="Calculator" app="^Calculator$" manage=off
yabai -m rule --add label="VirtualBox" app="^VirtualBox$" manage=off
yabai -m rule --add label="Clean My Mac" app="^CleanMyMac X$" manage=off
yabai -m rule --add app="Finder" manage=off  opacity=1 
yabai -m rule --add app="^Notes$"      opacity=1 manage=off
yabai -m rule --add app="Pages"            opacity=1 manage=off


# show digital colour meter topmost and on all spaces
yabai -m rule --add app="^Digital Colou?r Meter$" sticky=on

echo "yabai configuration loaded.."
