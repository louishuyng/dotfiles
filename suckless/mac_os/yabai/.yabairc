#!/usr/bin/env sh

# stop process new window manager in Ventura
launchctl unload -F /System/Library/LaunchAgents/com.apple.WindowManager.plist

# global settings
yabai -m config window_topmost               off
yabai -m config window_border                off
yabai -m config window_border_blur           off
yabai -m config window_border_width          1
yabai -m config active_window_border_color   0xff60ff60
yabai -m config window_border_radius 0

# Padding
yabai -m config \
	layout bsp \
	top_padding 0   \
	bottom_padding 26  \
	left_padding 0 \
	right_padding 0 \
	window_gap 6 \

# signals
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

yabai -m signal --add event=window_destroyed action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"
yabai -m signal --add event=application_terminated action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"

yabai -m signal --add event=space_changed action="osascript -e 'tell application \"UÌˆbersicht\" to refresh widget id \"simple-bar-index-jsx\"'"
yabai -m signal --add event=application_activated action="zsh ~/.dotfiles/suckless/mac_os/yabai/application-activated.zsh"

# Rules

# Labels
yabai -m space 1 --label Debug
yabai -m space 2 --label Dev
yabai -m space 3 --label View
yabai -m space 4 --label Work
yabai -m space 5 --label Social


# Devops
yabai -m rule --add app="^Postman$" manage=off opacity=1                 space=1 border=on
yabai -m rule --add app="^Wireshark$" manage=off                         space=1 border=on
yabai -m rule --add app="^OrbStack$" manage=off                          space=1
yabai -m rule --add app="^Disk Utility$" manage=off          opacity=1   space=1
yabai -m rule --add app="^GraphiQL$" manage=off          opacity=1       space=1
yabai -m rule --add app="^TablePlus$"      opacity=1 manage=off          space=1
yabai -m rule --add app="^DataGrip$"      opacity=1 manage=off          space=1 border=on
yabai -m rule --add label="VirtualBox" app="^VirtualBox$" manage=off space=1
yabai -m rule --add app="^FileZilla$" manage=off opacity=1                 space=1
yabai -m rule --add app="^Burp Suite Community Edition$" manage=off      opacity=1       space=1 border=on
yabai -m rule --add app="ZAP" manage=off      opacity=1       space=1 border=on

# Development
yabai -m rule --add app="Alacritty"                          space=2 border=on
yabai -m rule --add app="Terminal"                          space=2
yabai -m rule --add app="Code"     manage=off                       space=2 manage=off
yabai -m rule --add app="WebStorm"           manage=off                 space=2 manage=off
yabai -m rule --add app="^Xcode$" manage=off                   space=2
yabai -m rule --add app="Sourcetree" manage=off space=2

# View
yabai -m rule --add app="^Brave Browser$"    opacity=1                  space=3 border=on
yabai -m rule --add app="^Arc$"    opacity=1                  space=3
yabai -m rule --add app="^Min$"   manage=off  opacity=1                  space=3
yabai -m rule --add app="qutebrowser"      manage=off                 space=3
yabai -m rule --add app="Safari" manage=off opacity=1 space=3 border=on
yabai -m rule --add app="^Figma$"            opacity=1 manage=off    space=3
yabai -m rule --add app="Notion"           opacity=1 manage=off    space=3
yabai -m rule --add app="Obsidian"         opacity=1 manage=off  space=3
yabai -m rule --add app="draw.io"          opacity=1 manage=off    space=3
yabai -m rule --add app="WPS Office"          opacity=1 manage=off    space=3

# Communication
yabai -m rule --add app="Slack" title="Slack"      opacity=1 manage=off space=4
yabai -m rule --add app="zoom.us" manage=off       opacity=1            space=4
yabai -m rule --add app="^Microsoft Teams$" manage=off       opacity=1  space=4
yabai -m rule --add app="^Discord$" manage=off               opacity=1  space=4
yabai -m rule --add app="^Skype$"          opacity=1 manage=off space=4
yabai -m rule --add app="^Mail$"          opacity=1 manage=off space=4
yabai -m rule --add app="^Microsoft Outlook$"          opacity=1 manage=off space=4
yabai -m rule --add app="Telegram" opacity=1 manage=off space=4

# Entertainment
yabai -m rule --add app="^Spotify$"          opacity=1 manage=off space=5
yabai -m rule --add app="VLC"              manage=off space=5
yabai -m rule --add label="App Store" app="^App Store$" manage=off space=5
yabai -m rule --add app="Messenger" opacity=1 manage=off space=5

# Others
yabai -m rule --add app="QuickTime Player" manage=off
yabai -m rule --add label="Finder" app="^Finder$" title="(Co(py|nnect)|Move|Info|Pref)" manage=off
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off
yabai -m rule --add label="Clean My Mac" app="^CleanMyMac X$" manage=off
yabai -m rule --add app="Finder" manage=off  opacity=1 
yabai -m rule --add app="^System Settings" opacity=1 manage=off
yabai -m rule --add label="Calculator" app="^Calculator$" manage=off
yabai -m rule --add app="^Notes$"      opacity=1 manage=off
yabai -m rule --add app="Pages"            opacity=1 manage=off
yabai -m rule --add app="^Preview" opacity=1 manage=off
yabai -m rule --add app="^Microsoft Word$" opacity=1 manage=off
yabai -m rule --add app="^Microsoft Excel$" opacity=1 manage=off
yabai -m rule --add app="^Microsoft PowerPoint$" opacity=1 manage=off
yabai -m rule --add app="Numi" opacity=1 manage=off
yabai -m rule --add app="1Password" opacity=1 manage=off
yabai -m rule --add app="^DevUtils$" manage=off opacity=1
yabai -m rule --add app="^Stats$" manage=off opacity=1
yabai -m rule --add app="^Raycast$" manage=off opacity=1
yabai -m rule --add app="^Skitch$" manage=off opacity=1
yabai -m rule --add app="^NordVPN$" manage=off opacity=1


# show digital colour meter topmost and on all spaces
yabai -m rule --add app="^Digital Colou?r Meter$" sticky=on

echo "yabai configuration loaded.."
