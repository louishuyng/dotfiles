yabai -m rule --add app="^Flipper$" manage=off      opacity=1       space=I
yabai -m rule --add app="^Lens$" manage=off      opacity=1       space=I
yabai -m rule --add app="^DataGrip$"      opacity=1 manage=off          space=I
