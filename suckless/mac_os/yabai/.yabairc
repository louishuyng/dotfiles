#!/usr/bin/env sh

# stop process new window manager in Ventura
launchctl unload -F /System/Library/LaunchAgents/com.apple.WindowManager.plist

# global settings
yabai -m config window_border                on
yabai -m config window_border_width          1
yabai -m config active_window_border_color   0xff60ff60
yabai -m config window_border_radius 0

# Padding
yabai -m config \
	layout bsp \
	top_padding 0   \
	bottom_padding 30  \
	left_padding 8 \
	right_padding 8 \
	window_gap 6 \

# signals
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

yabai -m signal --add event=window_destroyed action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"
yabai -m signal --add event=application_terminated action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"

yabai -m signal --add event=space_changed action="osascript -e 'tell application \"UÌˆbersicht\" to refresh widget id \"simple-bar-index-jsx\"'"

# Rules

# Labels
yabai -m space 1 --label I
yabai -m space 2 --label II
yabai -m space 3 --label III
yabai -m space 4 --label IV
yabai -m space 5 --label V


# Devops
yabai -m rule --add app="^sqlectron$"      opacity=1 manage=off          space=I
yabai -m rule --add app="^Postman$" manage=off opacity=1                 space=I
yabai -m rule --add app="^Beekeeper Studio$" manage=off                  space=I
yabai -m rule --add app="Mingo$" manage=off          opacity=1           space=I
yabai -m rule --add app="^Wireshark$" manage=off                         space=I
yabai -m rule --add app="^Docker$" manage=off                            space=I
yabai -m rule --add app="^OWASP$" manage=off                             space=I
