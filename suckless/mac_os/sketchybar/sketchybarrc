# WiFi Status
sketchybar --add item wifi right \
           --set wifi icon.font="JetbrainsMono Nerd Font Propo:Semibold:16.0" \
                      icon.padding_left=8 \
                      icon.padding_right=8 \
                      label.drawing=off \
                      update_freq=10 \
                      script="$PLUGIN_DIR/wifi.sh" \
                      background.color=$BACKGROUND_1 \
                      background.drawing=off \
                      padding_left=0 \
                      padding_right=0

#

##### Finalize Setup #####
sketchybar --update

