#!/opt/homebrew/bin/bash

# Modern aesthetic sketchybar configuration with aerospace integration
# Colors and icons are defined in separate files for better organization

source "$CONFIG_DIR/colors.sh"
source "$CONFIG_DIR/icons.sh"

PLUGIN_DIR="$CONFIG_DIR/plugins"

##### Bar Appearance #####
sketchybar --bar position=top height=32 \
                 color=$BAR_COLOR \
                 border_width=0 \
                 corner_radius=0 \
                 margin=0 \
                 blur_radius=0 \
                 padding_left=0 \
                 padding_right=5 \
                 shadow=off \
                 sticky=on \
                 topmost=window

##### Changing Defaults #####
default=(
  updates=when_shown
  icon.font="JetbrainsMono Nerd Font Propo:Semibold:16.0"
  icon.color=$ICON_COLOR
  icon.padding_left=6
  icon.padding_right=6
  label.font="JetbrainsMono Nerd Font Propo:Semibold:14.0"
  label.color=$LABEL_COLOR
  label.padding_left=6
  label.padding_right=6
  padding_left=8
  padding_right=8
  background.height=26
  background.corner_radius=6
  background.border_width=1
  background.border_color=$BACKGROUND_2
  popup.background.border_width=2
  popup.background.corner_radius=6
  popup.background.border_color=$POPUP_BORDER_COLOR
  popup.background.color=$POPUP_BACKGROUND_COLOR
)

sketchybar --default "${default[@]}"

##### Left Side Items #####

# Apple Logo
sketchybar --add item logo left \
           --set logo icon=$APPLE \
                           icon.font="JetbrainsMono Nerd Font Propo:Semibold:23.0" \
                           icon.color=0xffF75208 \
                           padding_right=0 \
                           padding_left=0 \
                           label.drawing=off \
                           click_script="$PLUGIN_DIR/apple.sh" \

# Aerospace Display-Aware Workspaces
sketchybar --add event aerospace_workspace_change

sketchybar --add item space left \
           --subscribe space aerospace_workspace_change \
           --set space \
                 padding_left=0 \
                 padding_right=0 \
                 icon.padding_left=0 \
                 icon.padding_right=0 \
                 label.padding_left=0 \
                 label.padding_right=5 \
                 background.drawing=off \
                 script="$PLUGIN_DIR/aerospace_display.sh"

# Monitor change handler for app movement
sketchybar --add item display center \
  --subscribe display display_change \
  --set display script="$PLUGIN_DIR/display_change.sh" \
                background.drawing=off \
                padding_left=0 \
                padding_right=0 \
                icon.drawing=off \
                label.drawing=off \

# Separator
sketchybar --add item separator left \
           --set separator icon="󰇙" \
                          icon.font="JetbrainsMono Nerd Font Propo:Regular:17.0" \
                          icon.color=$ACCENT_TERTIARY \
                          padding_left=5 \
                          padding_right=0 \
                          label.drawing=off


# Devops tools
sketchybar --add item devops left \
           --set devops icon=$DEVOPS \
                        icon.color=$GREY \
                        icon.font="JetbrainsMono Nerd Font Propo:Semibold:21.0" \
                        update_freq=10  \
                        icon.padding_left=8 \
                        icon.padding_right=5 \
                        label.drawing=off \
                        background.color=$BACKGROUND_1 \
                        background.drawing=on \
                        padding_left=4 \
                        padding_right=4 \
                        click_script="$PLUGIN_DIR/devops.sh"

# GitHub Notifications
sketchybar --add item github left \
           --set github icon=$GITHUB \
                        icon.color=$GREY \
                        icon.font="JetbrainsMono Nerd Font Propo:Semibold:18.0" \
                        update_freq=60  \
                        icon.padding_left=8 \
                        label.font="JetbrainsMono Nerd Font Propo:Medium:13.0" \
                        label.color=$WHITE \
                        label.drawing=on \
                        background.color=$BACKGROUND_1 \
                        background.drawing=on \
                        padding_left=4 \
                        padding_right=4 \
                        script="$PLUGIN_DIR/github.sh" \
                        click_script="open https://github.com/notifications?query=is%3Aunread"

# VPN
sketchybar --add item vpn left \
           --set vpn icon="􀤆" \
                        icon.font="JetbrainsMono Nerd Font Propo:Semibold:14.0" \
                        update_freq=10  \
                        icon.padding_left=8 \
                        icon.padding_right=10 \
                        label.drawing=off \
                        background.color=$BACKGROUND_1 \
                        background.drawing=on \
                        padding_left=4 \
                        padding_right=4 \
                        script="$PLUGIN_DIR/vpn.sh" \
                        click_script="$PLUGIN_DIR/toggle_vpn.sh"

# ORB
sketchybar --add item docker left \
           --set docker icon="󰀘" \
                        icon.font="JetbrainsMono Nerd Font Propo:Semibold:16.0" \
                        update_freq=10  \
                        icon.padding_left=8 \
                        icon.padding_right=5 \
                        label.drawing=off \
                        background.color=$BACKGROUND_1 \
                        background.drawing=on \
                        padding_left=4 \
                        padding_right=4 \
                        script="$PLUGIN_DIR/docker.sh" \
                        click_script="$PLUGIN_DIR/toggle_docker.sh"

# Front App
sketchybar --add item front_app left \
           --set front_app icon.drawing=on \
                          icon.font="sketchybar-app-font:Regular:18" \
                          icon.color=$ACCENT_QUATERNARY \
                          icon.padding_left=0 \
                          icon.padding_right=2 \
                          label.font="JetbrainsMono Nerd Font Propo:Medium:13.0" \
                          label.color=$WHITE \
                          label.padding_left=4 \
                          label.padding_right=0 \
                          padding_left=8 \
                          padding_right=0 \
                          script="$PLUGIN_DIR/front_app.sh" \
                          click_script="/opt/homebrew/bin/aerospace focus-back-and-forth" \
           --subscribe front_app front_app_switched



##### Right Side Items #####

# Clock
sketchybar --add item clock right \
           --set clock icon="󰅐" \
                       icon.font="JetbrainsMono Nerd Font Propo:Semibold:16.0" \
                       icon.color=$YELLOW \
                       icon.padding_left=8 \
                       icon.padding_right=6 \
                       label.font="JetbrainsMono Nerd Font Propo:Medium:13.0" \
                       label.color=$WHITE \
                       label.padding_left=0 \
                       label.padding_right=8 \
                       update_freq=10 \
                       script="$PLUGIN_DIR/clock.sh" \
                       background.color=$BACKGROUND_1 \
                       background.drawing=off \
                       padding_left=2 \
                       padding_right=0 \
                       click_script="$PLUGIN_DIR/clock_click.sh"

# CPU
sketchybar --add item cpu right \
           --set cpu icon.font="JetbrainsMono Nerd Font Propo:Semibold:18.0" \
                        icon.padding_left=8 \
                        icon.padding_right=6 \
                        label.font="JetbrainsMono Nerd Font Propo:Medium:13.0" \
                        label.padding_left=0 \
                        label.padding_right=4 \
                        update_freq=10 \
                        script="$PLUGIN_DIR/cpu.sh" \
                        background.color=$BACKGROUND_1 \
                        background.drawing=off \
                        padding_left=0 \
                        padding_right=0 \
# RAM
sketchybar --add item ram right \
           --set ram icon.font="JetbrainsMono Nerd Font Propo:Semibold:17.0" \
                        icon=$RAM \
                        icon.color=$MAGENTA \
                        icon.padding_left=8 \
                        icon.padding_right=6 \
                        label.font="JetbrainsMono Nerd Font Propo:Medium:13.0" \
                        label.padding_left=0 \
                        label.padding_right=4 \
                        update_freq=10 \
                        script="$PLUGIN_DIR/ram.sh" \
                        background.color=$BACKGROUND_1 \
                        background.drawing=off \
                        padding_left=0 \
                        padding_right=0 \

# disk
sketchybar --add item disk right \
           --set disk icon.font="JetbrainsMono Nerd Font Propo:Semibold:17.0" \
                             icon=$DISK \
                             icon.color=$RED \
                             icon.padding_left=8 \
                             icon.padding_right=4 \
                             label.drawing=on \
                             update_freq=60 \
                             label.font="JetbrainsMono Nerd Font Propo:Medium:13.0" \
                             label.padding_left=0 \
                             label.padding_right=4 \
                             script="$PLUGIN_DIR/disk.sh" \
                             background.color=$BACKGROUND_1 \
                             background.drawing=off \
                             padding_left=0 \
                             padding_right=0



# Calendar Events
sketchybar --add item calendar right \
           --set calendar icon.font="JetbrainsMono Nerd Font Propo:Semibold:13.0" \
                          icon.padding_left=8 \
                          icon.padding_right=6 \
                          label.font="JetbrainsMono Nerd Font Propo:Medium:13.0" \
                          label.padding_left=2 \
                          label.padding_right=8 \
                          label.max_chars=25 \
                          update_freq=300 \
                          script="$PLUGIN_DIR/calendar.sh" \
                          background.color=$BACKGROUND_1 \
                          background.drawing=on \
                          background.height=26 \
                          padding_left=4 \
                          padding_right=4


# Now Playing
sketchybar --add item now_playing right \
           --set now_playing icon.font="JetbrainsMono Nerd Font Propo:Semibold:16.0" \
                            icon.padding_left=8 \
                            icon.padding_right=6 \
                        label.font="JetbrainsMono Nerd Font Propo:Medium:13.0" \
                            label.padding_left=4 \
                            label.padding_right=8 \
                            update_freq=2 \
                            script="$PLUGIN_DIR/now_playing.sh" \
                            background.color=$BACKGROUND_1 \
                            background.drawing=on \
                            drawing=off \
                            padding_left=4 \
                            padding_right=4

# Volume
sketchybar --add item volume right \
           --set volume icon.font="JetbrainsMono Nerd Font Propo:Semibold:16.0" \
                        icon.color=$ACCENT_PRIMARY \
                        icon.padding_left=10 \
                        icon.padding_right=12 \
                        label.drawing=off \
                        script="$PLUGIN_DIR/volume.sh" \
                        background.color=$BACKGROUND_1 \
                        background.drawing=on \
                        padding_left=4 \
                        padding_right=4 \
                        click_script="$PLUGIN_DIR/volume_click.sh" \
                        popup.background.border_width=2 \
                        popup.background.corner_radius=6 \
                        popup.background.border_color=$POPUP_BORDER_COLOR \
                        popup.background.color=$POPUP_BACKGROUND_COLOR \
                        popup.horizontal=on \
           --subscribe volume volume_change


# Input Source
# sketchybar --add       event              input_change 'AppleSelectedInputSourcesChangedNotification' \
#             --add item input_source right \
